{
  "git": {
    "commitMessage": "chore(${name}): release ${version}",
    "push": true,
    "commit": true,
    "tag": true,
    "requireCommits": false,
    "tagName": "${name}-${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "${name}-${version}",
    "draft": true
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false
  }
}
