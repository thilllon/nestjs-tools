{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["ES2015"],
    "skipLibCheck": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "removeComments": false,
    "baseUrl": ".",
    "outDir": "dist",
    "isolatedModules": true,
    "paths": {}
  }
}
